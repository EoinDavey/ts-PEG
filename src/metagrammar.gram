GRAM      := 1RULEDEF+;
RULEDEF   := _ name=NAME '\s*:=\s*' rule=RULE '\s*;\s*';
RULE      := head=ALT '\s*\|\s*' tail=RULE
           | alt=ALT;
ALT       := MATCHSPEC+;
MATCHSPEC := _ name=NAME '=' rule=RULEXPR _
           | _ rule=RULEXPR _;
RULEXPR   := at=ATOM op='\+|\*'
           | ATOM;
ATOM      := name=NAME
           | match=STRLIT;
NAME      := '[a-zA-Z_]+';
STRLIT    := '\'' val='([^\'\\]|(\\.))*' '\'';
_         := '\s*';
