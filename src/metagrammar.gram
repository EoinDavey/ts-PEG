GRAM      := head=RULEDEF tail=GRAM
           | def=RULEDEF;
RULEDEF   := _ name=NAME '\s*:=\s*' rule=RULE '\s*;\s*';
RULE      := head=ALT '\s*\|\s*' tail=RULE
           | alt=ALT;
ALT       := head=MATCHSPEC _ tail=ALT
           | mtch=MATCHSPEC;
MATCHSPEC := name=NAME '=' rule=ATOM
           | rule=ATOM;
ATOM      := name=NAME
           | match=STRLIT;
NAME      := '[a-zA-Z_]+';
STRLIT    := '\'' val='([^\'\\]|(\\.))*' '\'';
_         := '\s*';
