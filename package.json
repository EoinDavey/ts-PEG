{
    "name": "tspeg",
    "version": "1.3.2",
    "homepage": "https://github.com/EoinDavey/tsPEG",
    "description": "TypeScript parser generator",
    "author": "Eoin Davey <eoind@vey.ie>",
    "repository": {
        "type": "git",
        "url": "https://github.com/EoinDavey/tsPEG.git"
    },
    "main": "index.js",
    "scripts": {
        "gen-tests": "./gen-tests.sh",
        "build": "tsc && npm run gen && tsc",
        "lint": "tslint --force",
        "gen": "cp src/meta.ts /tmp/meta.ts && node ./tsbuild/cli.js src/metagrammar.peg src/meta.ts",
        "lint-all": "tslint --force \"src/**/*.ts\"",
        "test": "./gen-tests.sh && jest && tslint --project . -c tslint.json",
        "clean": "rm -rf tsbuild"
    },
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@types/node": "^12.12.30",
        "jest": "^25.2.0",
        "ts-jest": "^25.2.1",
        "tslint": "^6.1.0",
        "typescript": "^3.8.3"
    },
    "bin": {
        "tspeg": "tsbuild/cli.js"
    },
    "jest": {
        "preset": "ts-jest",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "^.+\\.js$"
        ]
    }
}
